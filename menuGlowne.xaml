<Page x:Class="Saper.menuGlowne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Saper"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="menuGlowne">

    <Grid Background="LightCoral">
        <Viewbox>
            <Grid Height="450" Width="760">
                <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Saper" VerticalAlignment="Top" Width="120" TextAlignment="Center"/>
                <Grid Height="250" Width="380" Margin="0,50,400,0" VerticalAlignment="Top">
                    <TextBox HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="Szerokość: " VerticalAlignment="Top" Width="120" TextAlignment="Center" x:Name="txtboxWidth"/>
                    <Slider HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Width="350" Height="25" Value="10"  Maximum="20" ValueChanged="Slider_ValueChangedX" SmallChange="1" Minimum="1" x:Name="sliderWidth"/>
                    <TextBox HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="Szerokość: " VerticalAlignment="Top" Width="120" TextAlignment="Center" x:Name="txtboxHeight"/>
                    <Slider HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="350" Height="25" Value="10"  Maximum="20" ValueChanged="Slider_ValueChangedY" SmallChange="1" Minimum="1" x:Name="sliderHeight"/>
                </Grid>
                <Grid Height="250" Width="380" Margin="385,50,-5,0" VerticalAlignment="Top">
                    <TextBox HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="Wybierz trudność gry" VerticalAlignment="Top" Width="120"/>
                    <RadioButton Content="łatwy (1/4)" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="Normalny (1/3)" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="ciężki (1/2)" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top"/>

                </Grid>
                <Button Content="Rozpocznij grę" HorizontalAlignment="Center" Margin="0,384,0,0" VerticalAlignment="Top" Click="Button_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
