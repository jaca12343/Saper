<Page x:Class="Saper.game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Saper"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="game">

    <Grid Background="MediumAquamarine">
        <Grid Height="50" VerticalAlignment="Top">
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" />
            
            <Image Height="50" Margin="-15,00,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="50" Stretch="Fill" Source="/images/buzka.png" MouseDown="startNewGame"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        </Grid>
        <Viewbox Margin="0,50,0,0">
            <Grid Height="400" Width="800" x:Name="gameGrid">
                <Grid.RowDefinitions>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    
                </Grid.ColumnDefinitions>
            </Grid>
        </Viewbox>
        
    </Grid>
</Page>
